{
  "name": "mammothphp/woollym",
  "description": "WoollyM: PHP Data Analysis Library",
  "keywords": ["data", "data analysis", "sql", "csv", "database"],
  "homepage": "https://github.com/MammothPHP/WoollyM",
  "type": "library",
  "license": "BSD-3-Clause",
  "require": {
    "php": "^8.4",
    "ext-mbstring": "*",
    "ext-pdo_sqlite": "*",
    "phpoffice/phpspreadsheet": "^4.5",
    "league/csv": "^9.23",
    "halaxa/json-machine": "^1.2",
    "spatie/regex": "^3.1"
  },
  "require-dev": {
    "laravel/pint": "^1.22",
    "pestphp/pest": "^3.6",
    "phpbench/phpbench": "^1.4",
    "saggre/phpdocumentor-markdown": "^0.1",
    "tomasvotruba/lines": "^0.6",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": { "MammothPHP\\WoollyM\\": "src/"}
  },
  "autoload-dev" : {
    "psr-4": { "Tests\\": "tests/" }
  },
  "scripts": {
    "test": "pest --display-warning",
    "pintify": "pint"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": false
    }
  },
  "archive": {
    "exclude": [
        "/logos",
        "/tests",
        "/dev/",
        "/doc/",
        "/.github",
        "*.dist",
        "*.cache"
    ]
  }
}
